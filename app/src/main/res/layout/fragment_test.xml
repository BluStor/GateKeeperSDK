<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarStyle="outsideOverlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            style="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auth"/>

        <Button
            android:id="@+id/list_templates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List Templates"/>

        <Button
            android:id="@+id/add_good_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Good Template #0"/>

        <Button
            android:id="@+id/add_bad_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Bad Template #0"/>

        <Button
            android:id="@+id/authenticate_good_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Authenticate Good Template"/>

        <Button
            android:id="@+id/authenticate_different_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Authenticate Nonmatching Template"/>

        <Button
            android:id="@+id/authenticate_bad_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Authenticate Bad Template"/>

        <Button
            android:id="@+id/delete_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Template #0"/>

        <TextView
            style="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Card Settings"/>

        <Button
            android:id="@+id/update_good_firmware"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Good Firmware"/>

        <Button
            android:id="@+id/update_bad_firmware"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Bad Firmware"/>

        <TextView
            style="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Files"/>

        <Button
            android:id="@+id/create_directory_tests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create '/tests' Directory"/>

        <Button
            android:id="@+id/create_directory_nested"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create '/tests/nested' Directory"/>

        <Button
            android:id="@+id/remove_directory_tests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remove '/tests' Directory"/>

        <Button
            android:id="@+id/remove_directory_nested"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remove '/tests/nested' Directory"/>

        <Button
            android:id="@+id/list_directory_tests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List '/tests' Files"/>

        <Button
            android:id="@+id/upload_tests_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload '/tests/image.jpg'"/>

        <Button
            android:id="@+id/download_tests_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download '/tests/image.jpg'"/>

        <Button
            android:id="@+id/delete_tests_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete '/tests/image.jpg'"/>

        <Button
            android:id="@+id/remove_tests_image_folder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remove '/tests/image.jpg' (directory)"/>

        <Button
            android:id="@+id/delete_directory_tests_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete '/tests' (file)"/>
    </LinearLayout>
</ScrollView>
